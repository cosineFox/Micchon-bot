# Required
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# Comma-separated list of allowed Chat IDs (User IDs or Group IDs)
# Use @userinfobot or similar to find your ID or Group ID
TELEGRAM_ALLOWED_CHAT_IDS=

# Optional Features (True/False)
TTS_ENABLED=False
FINE_TUNE_ENABLED=False

# Bluesky integration

# Bluesky
BLUESKY_HANDLE=your.handle.bsky.social
BLUESKY_APP_PASSWORD=your_app_password

# Paths (optional - defaults to ./data)
DATA_DIR=./data
EXPORT_DIR=./data/exports
IMAGE_DIR=./data/images

# Qdrant vector database (run: docker run -p 6333:6333 qdrant/qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# TTS voice sample (optional - path to a voice sample for cloning)
TTS_VOICE_SAMPLE=
